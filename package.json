{
  "name": "fastify-esm-ts-node",
  "type": "module",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "author": {
    "name": "Melroy van den Berg",
    "email": "melroy@melroy.org",
    "url": "https://melroy.org"
  },
  "contributors": [],
  "private": true,
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node .",
    "dev": "nodemon",
    "develop": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --no-warnings=ExperimentalWarning --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./src --ext .ts",
    "fix": "eslint --fix ./src --ext .ts",
    "prettier": "prettier '**/*.{ts,md}'",
    "prettier:write": "prettier --write '**/*.{ts,md}'",
    "prod": "npm run build && echo 'INFO: Starting production server...' && NODE_ENV=production node ."
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "fastify": "^4.26.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
